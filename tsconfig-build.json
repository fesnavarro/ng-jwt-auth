{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "es2015",
        "moduleResolution": "node",
        "strictNullChecks": true,
        "outDir": "dist",
        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true,
        "paths": [],
        "rootDir": ".",
        "sourceMap": true,
        "lib": ["es2015", "dom"],
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "target": "es2015",
        "strict": true,
        "inlineSources": true
    },
    "files": [
        "public_api.ts"
    ],
    "angularCompilerOptions": {
        "skipTemplateCodegen": true,
        "annotateForClosureCompiler": true,
        "strictMetadataEmit": true,
        "flatModuleOutFile": "ng-jwt-auth.js",
        "flatModuleId": "@scomith/ng-jwt-auth",
        "annotationAs": "decorators"
    }
}
