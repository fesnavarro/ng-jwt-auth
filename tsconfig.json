{
    "compileOnSave": false,
    "buildOnSave": false,
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "strictNullChecks": true,
        "outDir": "dist",
        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true,
        "paths": [],
        "rootDir": ".",
        "sourceMap": true,
        "lib": ["es2015", "dom"],
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "target": "es2015",
        "strict": true,
        "inlineSources": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
}
